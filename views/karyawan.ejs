<div class="container mt-3">
  <div class="row">
      <div class="col-md-8">
          <h2>Data Karyawan</h2>
          <a href="/karyawan/add" class="btn btn-outline-primary ml-auto mb-2"><i class="bi bi-plus-circle"></i> Tambah Karyawan</a>
        <!-- alert add data success -->
          <% if (msg.length !== 0) { %>
            <div class="alert alert-success" role="alert">
             <%= msg %>
            </div>
          <% } %>
          <table id="example1" class="table table-bordered table-striped">
              <thead style="text-align: center; background-color: #023047;; color: white;  ">
                <tr>
                  <th scope="col">No</th>
                  <th scope="col">NIK</th>
                  <th scope="col">Nama Karyawan</th>
                  <th scope="col">Jabatan</th>
                  <th scope="col">Email</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                    
               
                <% let no = 1; %>
                <% karyawans.forEach(karyawan => { %>
                  <tr>
                    <td scope="row"><%= no++ %></td>
                    <td><%= karyawan.nik %></td>
                    <td><%= karyawan.nama %></td>
                    <td><%= karyawan.nama_jabatan ? karyawan.nama_jabatan.nama_jabatan : 'Tidak ada jabatan' %></td>
                    <td><%= karyawan.email %></td>
                    <td>
                        <a href="/karyawan/<%= karyawan.nama %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
             <!-- kondisi jika data masih kosong -->
             <% if (karyawans.length === 0) { %>
              <span class="badge badge-danger"><i class="fas fa-info-circle"></i>
                Data masih kosong, silahkan Menginput data terlebih dahulu!</span>
            <% } %>
      </div>
  </div>
</div>