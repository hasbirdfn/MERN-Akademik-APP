<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Data Dosen</h2>
            <a href="/dosen/add" class="btn btn-outline-primary ml-auto mb-2"><i class="bi bi-plus-circle"></i> Tambah Dosen</a>
          <!-- alert add data success -->
            <% if (msg.length !== 0) { %>
              <div class="alert alert-success" role="alert">
               <%= msg %>
              </div>
            <% } %>
            <table id="example1" class="table table-bordered table-striped">
                <thead style="text-align: center; background-color: #023047;; color: white;  ">
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">NIP</th>
                    <th scope="col">Nama Dosen</th>
                    <th scope="col">Mata Kuliah</th>
                    <th scope="col">Email</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                      
                 
                  <% let no = 1; %>
                  <% dosens.forEach(dosen => { %>
                    <tr>
                      <td scope="row"><%= no++ %></td>
                      <td><%= dosen.nip %></td>
                      <td><%= dosen.nama %></td>
                      <td><%= dosen.matkul ? dosen.matkul.matkul : 'Tidak ada mata kuliah' %></td>
                      <td><%= dosen.email %></td>
                      <td>
                          <a href="/dosen/<%= dosen.nama %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
               <!-- kondisi jika data masih kosong -->
               <% if (dosens.length === 0) { %>
                <span class="badge badge-danger"><i class="fas fa-info-circle"></i>
                  Data masih kosong, silahkan Menginput data terlebih dahulu!</span>
              <% } %>
        </div>
    </div>
</div>