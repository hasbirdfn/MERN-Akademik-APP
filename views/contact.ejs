<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact Alumni</h2>
           
            <!-- halaman form kontak -->
            <a href="/contact/add" class="btn btn-outline-primary ml-auto mb-2"><i class="bi bi-plus-circle"></i> Tambah Contact</a>
            <% if (msg.length !== 0) { %>
              <div class="alert alert-success" role="alert">
               <%= msg %>
              </div>
            <% } %>
        
            <table id="example1" class="table table-bordered table-striped">
                <thead style="text-align: center; background-color: #023047;; color: white;  ">
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Lulusan</th>
                    <th scope="col">No HP</th>
                    <th scope="col">Email</th>
                    <th scope="col">Alamat</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody >
                  
                  <!-- kondisi jika data masih kosong -->
                  <% if (contacts.length === 0) { %>
                    <div class="alert alert-danger" role="alert">
                      Data contact masih kosong !
                     </div>
                  <% } %>
                  <% let no = 1; %>
                  <% contacts.forEach(contact => { %>
                    <tr>
                      <td scope="row"><%= no++ %></td>
                      <td><%= contact.nama %></td>
                      <td><%= contact.lulusan %></td>
                      <td><%= contact.nohp %></td>
                      <td><%= contact.email %></td>
                      <td><%= contact.alamat %></td>
                      <td>
                          <a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a>
                      </td>
                    </tr>
                  <% }) %>
                 
                </tbody>
              </table>
        </div>
    </div>
</div>