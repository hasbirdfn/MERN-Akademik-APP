<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Tambah Data</h2>
            <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <!-- Form post data karyawan -->
            <form method="POST" action="/karyawan">
                <div class="mb-3">
                    <label for="nik" class="form-label">NIK</label>
                    <input type="text" class="form-control" id="nik" name="nik" maxlength="7" required>
                </div>
                <div class="mb-3">
                    <label for="nama" class="form-label">Nama</label>
                    <input type="text" class="form-control" id="nama" name="nama" pattern="[A-Za-z\s]+" title="Nama hanya boleh berisi huruf dan spasi" required>

                </div>
                <div class="mb-3">
                    <label for="nama_jabatan" class="form-label">Jabatan</label>
                    <select class="form-control" id="nama_jabatan" name="nama_jabatan" required>
                        <% jabatanList.forEach(jabatan => { %>
                            <option value="<%= jabatan._id %>"><%= jabatan.nama_jabatan %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <button type="submit" class="btn btn-outline-primary ml-auto"><i class="bi bi-save"></i> Simpan</button>
                <a href="/karyawan" class="btn btn-outline-warning ml-auto">&laquo; Kembali</a>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('nik').addEventListener('input', function (e) {
        if (this.value.length > 7) {
            this.value = this.value.slice(0, 7);
        }
    });
</script>
<script>
    document.getElementById('nama').addEventListener('input', function (e) {
        this.value = this.value.replace(/[^A-Za-z\s]/g, '');
    });
</script>

